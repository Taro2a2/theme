{
  "name": "Homepage",
  "settings": [],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero Section",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Revolutionary Product"
        },
        {
          "type": "textarea",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Transform your life with our amazing product"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "/collections/all"
        }
      ]
    },
    {
      "type": "feature",
      "name": "Feature",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title",
          "default": "Amazing Feature"
        },
        {
          "type": "textarea",
          "id": "feature_description",
          "label": "Feature Description",
          "default": "This feature will change the way you look at things."
        },
        {
          "type": "html",
          "id": "feature_icon",
          "label": "Feature Icon (SVG)",
          "info": "Paste SVG code here"
        }
      ]
    },
    {
      "type": "product_showcase",
      "name": "Product Showcase",
      "limit": 1,
      "settings": [
        {
          "type": "product",
          "id": "featured_product",
          "label": "Featured Product"
        },
        {
          "type": "checkbox",
          "id": "show_price",
          "label": "Show Price",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_description",
          "label": "Show Description",
          "default": true
        }
      ]
    },
    {
      "type": "testimonial",
      "name": "Testimonial",
      "limit": 6,
      "settings": [
        {
          "type": "text",
          "id": "testimonial_author",
          "label": "Customer Name",
          "default": "Happy Customer"
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Testimonial Text",
          "default": "This product has completely changed my life. I can't recommend it enough!"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Rating",
          "default": 5
        }
      ]
    },
    {
      "type": "step",
      "name": "How It Works Step",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "step_title",
          "label": "Step Title",
          "default": "Easy Step"
        },
        {
          "type": "textarea",
          "id": "step_description",
          "label": "Step Description",
          "default": "Follow this easy step to get started with our product."
        },
        {
          "type": "image_picker",
          "id": "step_image",
          "label": "Step Image"
        }
      ]
    },
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "limit": 10,
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Frequently asked question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "This is the answer to the frequently asked question."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Landing Page",
      "blocks": [
        {
          "type": "hero"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "product_showcase"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "step"
        },
        {
          "type": "step"
        },
        {
          "type": "step"
        },
        {
          "type": "faq_item"
        },
        {
          "type": "faq_item"
        }
      ]
    }
  ]
}
