          "label": "Hero Title",
          "default": "Revolutionary Product That Changes Lives"
        },
        {
          "type": "textarea",
          "id": "hero_subtitle",
          "label": "Hero Subtitle",
          "default": "Our innovative product helps thousands of customers solve their everyday problems."
        },
        {
          "type": "text",
          "id": "hero_button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "hero_button_link",
          "label": "Button Link",
          "default": "/collections/all"
        },
        {
          "type": "header",
          "content": "Features Section"
        },
        {
          "type": "text",
          "id": "features_title",
          "label": "Features Title",
          "default": "Why Choose Our Product"
