        {
          "type": "textarea",
          "id": "features_subtitle",
          "label": "Features Subtitle",
          "default": "Discover the amazing benefits that make our product stand out from the competition."
        },
        {
          "type": "header",
          "content": "Product Showcase"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title",
          "default": "Our Flagship Product"
        },
        {
          "type": "richtext",
          "id": "product_description",
          "label": "Product Description",
          "default": "<p>Experience the revolution with our flagship product. Designed with precision and care to give you the best results every time.</p>"
        },
        {
          "type": "text",
          "id": "product_button_text",
          "label": "Button Text",
          "default": "Buy Now"
        },
        {
          "type": "url",
          "id": "product_button_link",
          "label": "Button Link",
          "default": "/products/product-name"
        },
        {
          "type": "header",
          "content": "Testimonials Section"
        },
        {
          "type": "text",
          "id": "testimonials_title",
