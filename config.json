  ],name": "Theme Colors",
      "settings": [
        {
          "type": "color",
          "id": "primary_color",
          "label": "Primary Color",
          "default": "#ff6b6b"
        },
        {
          "type": "color",
          "id": "secondary_color",
          "label": "Secondary Color",
          "default": "#4ecdc4"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#333333"
        },
        {
          "type": "color",
          "id": "light_bg",
          "label": "Light Background",
          "default": "#f8f9fa"
        },
        {
          "type": "color",
          "id": "dark_bg",
          "label": "Dark Background",
          "default": "#343a40"
        }
      ]
    },
    {
      "name": "Typography",
      "settings": [
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Heading Font",
          "default": "poppins_n6"
        },
        {
          "type": "font_picker",
          "id": "body_font",
          "label": "Body Font",
          "default": "poppins_n4"
        }
      ]
    },
    {
      "name": "Header",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "range",
          "id": "logo_width",
          "min": 50,
          "max": 250,
          "step": 10,
          "unit": "px",
          "label": "Logo width",
          "default": 140
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "main-menu"
        }
      ]
    },
    {
      "name": "Footer",
      "settings": [
        {
          "type": "text",
          "id": "footer_column1_title",
          "label": "Column 1 Title",
          "default": "Shop"
        },
        {
          "type": "link_list",
          "id": "footer_menu1",
          "label": "Column 1 Menu",
          "default": "footer"
        },
        {
          "type": "text",
          "id": "footer_column2_title",
          "label": "Column 2 Title",
          "default": "Information"
        },
        {
          "type": "link_list",
          "id": "footer_menu2",
          "label": "Column 2 Menu",
          "default": "footer"
        },
        {
          "type": "text",
          "id": "footer_column3_title",
          "label": "Contact",
          "default": "Get in touch"
        },
        {
          "type": "richtext",
          "id": "footer_contact_info",
          "label": "Contact Information",
          "default": "<p>Email: contact@example.com<br>Phone: (123) 456-7890</p>"
        },
        {
          "type": "text",
          "id": "footer_newsletter_title",
          "label": "Newsletter Title",
          "default": "Subscribe"
        },
        {
          "type": "text",
          "id": "footer_newsletter_text",
          "label": "Newsletter Text",
          "default": "Subscribe to get special offers, free giveaways, and new product announcements."
        },
        {
          "type": "url",
          "id": "social_facebook",
          "label": "Facebook URL"
        },
        {
          "type": "url",
          "id": "social_instagram",
          "label": "Instagram URL"
        },
        {
          "type": "url",
          "id": "social_twitter",
          "label": "Twitter URL"
        }
      ]
    },
    {
      "name": "Announcement Bar",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_announcement",
          "label": "Show announcement",
          "default": true
        },
        {
          "type": "text",
          "id": "announcement_text",
          "label": "Announcement text",
          "default": "Free shipping on all orders over $50"
        },
        {
          "type": "color",
          "id": "announcement_bg",
          "label": "Background",
          "default": "#ff6b6b"
        },
        {
          "type": "color",
          "id": "announcement_text_color",
          "label": "Text color",
          "default": "#ffffff"
        }
      ]
